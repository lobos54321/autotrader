      "action": "BUY_WITH_CONFIRM",
      "position": "Normal",
      "position_multiplier": 0.7
    },
    {
      "gate_status": "PASS_OR_GREYLIST",
      "min_score": 40,
      "max_score": 59,
      "rating": "B",
      "action": "WATCH",
      "position": "Small"
    },
    {
      "gate_status": "ANY_GREYLIST",
      "rating": "GREYLIST",
      "action": "WATCH_ONLY",
      "position": "Small",
      "auto_buy_disabled": true
